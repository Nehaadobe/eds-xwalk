{
  "name": "@adobe/aem-boilerplate",
  "private": true,
  "version": "1.3.0",
  "description": "Starter project for Adobe Helix",
  "scripts": {
    "lint:js": "eslint . --ext .json,.js,.mjs",
    "lint:css": "stylelint \"blocks/**/*.css\" \"styles/*.css\"",
    "lint": "npm run lint:js && npm run lint:css",
    "start": "concurrently \"npm run scaffold:start\" \"aem up\"",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "build:json": "npm-run-all -p build:json:models build:json:definitions build:json:filters",
    "build:json:models": "merge-json-cli -i \"models/_component-models.json\" -o \"component-models.json\"",
    "build:json:definitions": "merge-json-cli -i \"models/_component-definition.json\" -o \"component-definition.json\"",
    "build:json:filters": "merge-json-cli -i \"models/_component-filters.json\" -o \"component-filters.json\"",
    "prepare": "husky",
    "scaffold:create": "plop component --plopfile theme-tools/plopfile.mjs",
    "scaffold:create:log": "plop component --plopfile theme-tools/plopfile.mjs --verbose",
    "scaffold:start": "NODE_OPTIONS='--max-old-space-size=4096' npx gulp createBrandCSS && npx gulp default",
    "scaffold:build": "NODE_OPTIONS='--max-old-space-size=4096' npx gulp createBrandCSS",
    "scaffold:build:log": "NODE_OPTIONS='--max-old-space-size=4096' node theme-tools/generate-css.js --verbose",
    "scaffold:remove": "plop remove --plopfile theme-tools/plopfile.mjs",
    "scaffold:remove:log": "plop remove --plopfile theme-tools/plopfile.mjs --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adobe/aem-boilerplate.git"
  },
  "author": "Adobe",
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/adobe/aem-boilerplate/issues"
  },
  "homepage": "https://github.com/adobe/aem-boilerplate#readme",
  "devDependencies": {
    "@babel/eslint-parser": "7.28.0",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "concurrently": "^9.1.2",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-xwalk": "github:adobe-rnd/eslint-plugin-xwalk#v0.1.3",
    "husky": "9.1.1",
    "merge-json-cli": "1.0.4",
    "npm-run-all": "4.1.5",
    "stylelint": "16.21.1",
    "stylelint-config-standard": "38.0.0",
    "gulp": "^5.0.0",
    "plop": "^4.0.1",
    "dotenv": "^16.4.7",
    "postcss-import": "^16.1.0"
  }
}
